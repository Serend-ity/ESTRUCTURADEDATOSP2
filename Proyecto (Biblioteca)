def sesion(name,password):
    if usuario.usuario == name and usuario.Contrasena ==password:
        return True
    else:
        return False


class biblioteca:
    def __init__(self):

        self.libros= []

    def agregar_libro(self):
        nombre=input("Ingresa el titulo: ")
        autor= input("Ingresa el autor: ")
        genero= input("Ingresa el genero: ")
        new_libro= libro(nombre,autor,genero)
        self.libros.append(new_libro)
    def mostrar(self):
        for Libro in self.libros:
            print(f"Título: {Libro.nombre}, Autor: {Libro.autor}, Género: {Libro.genero}")
    def consultar_libro(self,consultar):
        encontrado = False
        for libros in self.libros:
            if libros.nombre == consultar:
                encontrado = True
                if libros.disponibilidad:
                    print(f"El libro {libros.nombre} está disponible en la biblioteca.")
                else:
                    print(f"El libro {libros.nombre} está prestado.")
                break
        if not encontrado:
            print(f"El libro {consultar} no existe en la biblioteca.")

