class libro:
    def __init__(self, nombre, autor, genero):
        self.nombre = nombre
        self.autor = autor
        self.genero = genero
        self.disponibilidad= True
    def prestado(self):
        if self.disponibilidad:
            self.disponibilidad= False
            return True
        return False
    def devuelto(self):
        self.disponibilidad= True

class usuario:
    def __init__(self, name= "Alexis", password=12345):
        self.usuario= name
        self.Contrasena= password

if __name__=="__main__":
    usuario=usuario()
    biblioteca=biblioteca()


x = input("Ingresa tu usuario: ")
z = int(input("Ingresa tu contraseña: "))

if sesion(x,z):
    biblioteca.agregar_libro()
    biblioteca.agregar_libro()
    consulta = input("Ingrese el nombre del libro: ")
    biblioteca.consultar_libro(consulta)
    biblioteca.mostrar()
else:
    print("Usuario o contraseña invalido. ")
